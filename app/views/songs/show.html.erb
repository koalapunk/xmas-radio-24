<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @song %>

    <%= link_to "Song bearbeiten", edit_song_path(@song), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium italic" %>
    <%= link_to "Zurück zur Song-Übersicht", songs_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium italic" %>
    <div class="inline-block ml-2">
      <%= button_to "Song löschen", @song, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium italic" %>
    </div>
  </div>
</div>
